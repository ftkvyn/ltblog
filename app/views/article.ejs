<div class="row">
	<div class="col-lg-9 col-sm-8">
		<div class="row content">
			<h1><%= article.title %></h1>
			<h3 class="theme-link"><a href="/<%= article.theme.url %>/"><%= article.theme.title %></a></h3>
			<p class="article-data">Опубликовано: <%= article.createdAt.toLocaleDateString() %></p>
			<div class="author-info">
				<p class="article-author"><strong><i><%= article.author.name %></i></strong></p>
				<img src="<%= article.author.profilePicLarge %>" alt="/">
			</div> 

			<p class="description"><%= article.description %></p>

			<%- article.body %>
			
			<div class="view-statistic clearfix">
				<% if(data.isAuthor || true) { %>
				<div class="views"><%= article.views.length %></div>
				<% } %>
				<div class="sotal-share pull-right">
					<div class="vk-share">25</div>
					<div class="vk-share">25</div>
					<div class="vk-share">25</div>
					<div class="vk-share">25</div>
				</div>
			</div>
		</div>
		<div id="disqus_thread"></div>
		<script>

		var disqus_config = function () {
		this.page.url = '<%- data.origin %>' + '/p/' + '<%- article.theme.url %>' + '/' + '<%-article.id %>';
		this.page.identifier = '<%- article.theme.url %>' + '_' + '<%-article.id %>';
		};
		
		(function() {
		var d = document, s = d.createElement('script');
		s.src = 'https://the-living-thing-ru.disqus.com/embed.js';
		s.setAttribute('data-timestamp', +new Date());
		(d.head || d.body).appendChild(s);
		})();
		</script>
		<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	</div>
	<div class="col-lg-3 col-sm-4" id='relates'>
	
	</div>
</div>
<input type="hidden" id='art-id' value="<%= article.id %>">

<script src="/scripts/article.js"></script>