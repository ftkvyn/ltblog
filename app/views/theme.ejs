<h2><%= theme.title %></h2>
<div class="row">
	<div class="col-lg-12 col-sm-12">
		<div class="row content">
			<% for(var i = 0; i < articles.length; i++){
				var article = articles[i]; %>
			<div class="col-lg-6 main-article">
				<a href="/<%= article.theme.url %>/<%= article.id %>">
					<div class="img-container">
						<img src="<%= article.image %>" class='img' alt="/" />
					</div>	
					<h3><%= article.theme.title %></h3>
					<h2><%= article.title %></h2>
					<h4><img class="author-img" src="<%= article.author.profilePicSmall %>" /><i><%= article.author.name %></i>, <%= article.createdAt.toLocaleDateString() %> </h4>
					<p><%= article.description %></p>
				</a>
			</div>
			<%}%>
		</div>
	</div>
</div>
